<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNumeroPista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivAlbum"
        />

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@color/black"
        app:layout_constraintLeft_toRightOf="@id/tvNumeroPista"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvNombre"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintBottom_toTopOf="@id/tvArtista"
        />
    <TextView
        android:id="@+id/tvArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luis miguel"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintBottom_toTopOf="@id/tvAno"

        />
    <TextView
        android:id="@+id/tvAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012"
        app:layout_constraintTop_toBottomOf="@id/tvArtista"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintBottom_toTopOf="@id/tvGenero"
        />
    <TextView
        android:id="@+id/tvGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda"
        app:layout_constraintTop_toBottomOf="@id/tvAno"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintBottom_toTopOf="@id/tvDuracion"
        />
    <TextView
        android:id="@+id/tvDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:52"
        app:layout_constraintTop_toBottomOf="@id/tvGenero"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintBottom_toTopOf="@id/btnEliminar"
        />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        app:layout_constraintTop_toBottomOf="@id/tvDuracion"

     />


</androidx.constraintlayout.widget.ConstraintLayout>